@model Ubuntu
@{

    ViewData["Title"] = "Criar Ubuntu";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Ubuntu</h1>

</div>


<form asp-controller="Ubuntu" asp-action="Create" method="post">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="Text" asp-for="Nome" class="form-control" required placeholder="Digite o Nome do Ubuntu">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="idade">Idade</label>
        <input type="Text" asp-for="Idade" class="form-control" required placeholder="Digite sua idade">
        @Html.ValidationMessageFor(x => x.Idade)
    </div>

    <div class="form-group">
        <label for="nivel">Número do documento(RG)</label>
        <input type="Text" asp-for="Rg" class="form-control" required placeholder="Digite o número do seu Rg">
        @Html.ValidationMessageFor(x => x.Rg)
    </div>

    @*<div class="form-group">
        <label for="status">Status</label>
        <input type="Text" asp-for="Status" class="form-control" required placeholder="Digite o nivel de conhecimento nessa linguagem">
        @Html.ValidationMessageFor(x => x.Nivel)
    </div>*@

    <button type="submit" class="btn btn-primary btn-block">Salvar</button>
    <a class="btn btn-secondary btn-block" asp-controller="ubuntu" asp-action="Index" role="button">Voltar</a>
</form>