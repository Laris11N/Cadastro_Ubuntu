@model Ubuntu
@{
    ViewData["Title"] = "Confirmação de apagar o Ubuntu";
}

<div class = "text-center"> 
    <h3>Realmente deseja apagar esse ubuntu (@Model.Nome)? </h3>

</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Ubuntu" asp-action="Index">Cancelar exclusão</a>
<a class= "btn btn-danger btn-block" role="button" asp-controller="Ubuntu" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>